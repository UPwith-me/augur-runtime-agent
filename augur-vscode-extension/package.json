{
  "name": "augur-ai-debugger",
  "displayName": "Augur AI Debugger",
  "description": "An AI agent that attaches to the debug session to provide runtime analysis and control.",
  "version": "0.0.1",
  "publisher": "augur-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/UPwith-me/Augur-Runtime-Debugging-Agent.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Debuggers",
    "AI"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.11.5",
    "@types/node-fetch": "^2.6.11",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "augur.startHeadlessSession",
        "title": "Augur: Debug in Live Panel"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "augur.startHeadlessSession",
          "group": "navigation",
          "when": "resourceExtname == .py || explorerResourceIsFolder"
        }
      ]
    },
    "configuration": {
      "title": "Augur AI Debugger",
      "properties": {
        "augur.model": {
          "type": "string",
          "default": "gemini",
          "enum": [
            "gemini",
            "claude"
          ],
          "description": "Select the AI model to use for debugging.",
          "scope": "resource"
        },
        "augur.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for Google Gemini (Gemini 2.5 Flash).",
          "scope": "resource"
        },
        "augur.claudeApiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for Anthropic Claude (Claude 4.5 Sonnet).",
          "scope": "resource"
        }
      }
    }
  }
}